@{
    ViewBag.Title = "ToDoListDisplay";
}

<h2>ToDoListDisplay</h2>
<style>
    .title{
        width:548px;
        height:119px;
        position:absolute;
        top:400px;
        left:150px;
        background:transparent url("{{ '/img/welcome6/mvtitle.png' | url }}") no-repeat top left;
    }
    .content{
        width:1024px;
        height:768px;
        position: absolute;
        top: 10px;
        left: 50px;
        background-image: url("{{ '/img/welcome6/bg.png' | url }}");
    }

    .navigationArc{
        margin: 0px auto;
        font-family: "Trebuchet MS", sans-serif;
        font-size: 24px;
        font-style: normal;
        font-weight: bold;
        letter-spacing: 1.4px;
    }
    .navigationArc .item{
        position:absolute;
    }
    .user{
        top:175px;
        left:110px;
    }
    .home{
        top:125px;
        left:360px;
    }
    .shop{
        top:165px;
        left:625px;
    }
    .camera{
        top:305px;
        left:835px;
    }
    .fav{
        top:495px;
        left:950px;
    }
    a.icon{
        width:52px;
        height:52px;
        position:absolute;
        top:75px;
        left:0px;
        cursor:pointer;
    }
    .user a.icon{
        background:transparent url("/content/images/welcome6/user.png") no-repeat 0px 0px;
    }
    .home a.icon{
        background:transparent url("/content/images/welcome6/home.png") no-repeat 0px 0px;
    }
    .shop a.icon{
        background:transparent url("/content/images/welcome6/shop.png") no-repeat 0px 0px;
    }
    .camera a.icon{
        background:transparent url("/content/images/welcome6/camera.png") no-repeat 0px 0px;
    }
    .fav a.icon{
        background:transparent url("/content/images/welcome6/fav.png") no-repeat 0px 0px;
    }
    .navigationArc .item a.active{
        background-position:0px -52px;
    }
    .item img.circle{
        position:absolute;
        top:0px;
        left:0px;
        width:52px;
        height:52px;
        opacity:0.1;
    }
    .item h2{
        position:absolute;
        width:147px;
        height:52px;
        color:#222;
        font-size:18px;
        top:0px;
        left:52px;
        text-indent:10px;
        line-height:52px;
        text-shadow:1px 1px 1px #fff;
        text-transform:uppercase;
    }
    .item h2.active{
        color:#fff;
        text-shadow:1px 0px 1px #555;
    }
    .item ul{
        list-style:none;
        position:absolute;
        top:60px;
        left:25px;
        display:none;
    }
    .item ul li a{
        font-size:15px;
        text-decoration:none;
        letter-spacing:1.5px;
        text-transform:uppercase;
        color:#222;
        padding:3px;
        float:left;
        clear:both;
        width:100px;
        text-shadow:1px 1px 1px #fff;
    }
    .item ul li a:hover{
        background-color:#fff;
        color:#444;
        -moz-border-radius:5px;
        -webkit-border-radius:5px;
        border-radius:5px;
        -moz-box-shadow:1px 1px 4px #666;
        -webkit-box-shadow:1px 1px 4px #666;
        box-shadow:1px 1px 4px #666;
    }
</style>


<br /><br /><br />


<div class="content">

    <div class="title"></div>

    <div class="navigationArc" id="navi">
        <div class="item user">
            <img src="~/Content/images/welcome6/bg1.png" alt="" width="199" height="199" class="circle"/>
            <a href="#" class="icon"></a>
            <h2>User</h2>
            <ul>
                <li><a href="#">Customer Info</a></li>
                <li><a href="#">Change Password</a></li>
                <li><a href="#">Logout</a></li>
            </ul>
        </div>
        <div class="item home">
            <img src="~/Content/images/welcome6/bg2.png" alt="" width="199" height="199" class="circle"/>
            <a href="#" class="icon"></a>
            <h2>Accounts</h2>
            <ul>
                <li><a href="#">Manage ADSL</a></li>
                <li><a href="#">Activate</a></li>
                <li><a href="#">Cancel</a></li>
            </ul>
        </div>
        <div class="item shop">
            <img src="~/Content/images/welcome6/bg3.png" alt="" width="199" height="199" class="circle"/>
            <a href="#" class="icon"></a>
            <h2>Support</h2>
            <ul>
                <li><a href="#">Event Logs</a></li>
                <li><a href="#">Remote Help</a></li>
                <li><a href="#">Comments</a></li>
            </ul>
        </div>
        <div class="item camera">
            <img src="~/Content/images/welcome6/bg5.png" alt="" width="199" height="199" class="circle"/>
            <a href="#" class="icon"></a>
            <h2>Advanced</h2>
            <ul>
                <li><a href="#">Suspend Unsuspend</a></li>
                <li><a href="#">Change ADSL</a></li>
                <li><a href="#">Provision</a></li>
            </ul>
        </div>
        <div class="item fav">
            <img src="~/Content/images/welcome6/bg4.png" alt="" width="199" height="199" class="circle"/>
            <a href="#" class="icon"></a>
            <h2>About Us</h2>
            <ul>
                <li><a href="#">Media</a></li>
                <li><a href="#">Press</a></li>
                <li><a href="#">Social</a></li>
                <li><a href="#">Contact</a></li>
            </ul>
        </div>
    </div>
</div>

<!-- The JavaScript -->
<script type="text/javascript" src="~/Scripts/jquery.easing.1.3.js"></script>
<script type="text/javascript">
    $(function() {
        $('#navi > div').hover(
                function () {
                    var $this = $(this);
                    $this.find('img').stop().animate({
                        'width'     :'199px',
                        'height'    :'199px',
                        'top'       :'0px',
                        'left'      :'5px',
                        'opacity'   :'1.0'
                    },200,'easeOutBack',function(){
                        $(this).parent().find('ul').fadeIn(100);
                    });

                    $this.find('a:first,h2').addClass('active');
                },
                function () {
                    var $this = $(this);
                    $this.find('ul').fadeOut(500);
                    $this.find('img').stop().animate({
                        'width'     :'52px',
                        'height'    :'52px',
                        'top'       :'75px',
                        'left'      :'0px',
                        'opacity'   :'0.1'
                    },5000,'easeOutBack');

                    $this.find('a:first,h2').removeClass('active');
                }
        );
    });
</script>